<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/head') %> 
  </head>
  <body> 
    <header>
      <%- include('./partials/header')  %> 
    </header>

    <form action="/todo" method="POST">
      <input type="text" name="list" />
      <input type="date" name="dueDate" id="duedate" />
      <button>Add</button>
    </form>
    <br />

    <table>
      <tr>
        <th>Job tobo</th>
        <th>Due Date</th>
      </tr>
      <% todo.forEach(x => { %>
      <tr>
        <td class=<%= x.status? 'done': '' %>  ><%= x.list %></td>
        <td><%= x.dueDate %> </td>
        <td><a href="/todo/edit/<%= x.id %>">Edit</a></td>
        <td><a href="/todo/delete/<%= x.id %>">Delete</a></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
